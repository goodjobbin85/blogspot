<div align="center">
	<h1>Article #<%= @article.id %></h1>
	<p><%= @article.title %></p>
	<p><%= @article.description %></p>
	Categories:
	<% @article.categories.each do |category| %>
		<p><%= category.name %></p>
	<% end %>
	<p>Created: <%= time_ago_in_words(@article.created_at) %></p>
	<h2>Comments</h2>
</div> 