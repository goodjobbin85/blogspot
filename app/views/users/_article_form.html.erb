<%= form_with(model: [current_user, current_user.articles.build ],
local: true) do |f| %>
	<p>
		<%= f.label :title, "Title" %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :categories %>
		<%= f.text_area :categories %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>