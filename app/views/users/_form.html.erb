<div class="form-group" align="center">
	<% if @user.errors.any? %>
		<h3>The following <%= pluralize(@user.errors.count, "error") %> prevented your changes from being saved:</h3>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= form_for @user do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>

		<div class="form-group">
			<%= f.label :email %>
			<%= f.email_field :email %>
		</div>

		<div class="form-group" %>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>

		<div class="form-group">
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
		</div>

		<%= f.submit %>
	<% end %>
</div>